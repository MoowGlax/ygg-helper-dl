{
  "manifest_version": 2,
  "name": "YggTorrent Fast Download + Magnet",
  "version": "1.3",
  "description": "Bypass l'attente de téléchargement et la limite sur YggTorrent. Intègre TurboBlague.",
  
  "permissions": [
    "activeTab",
    "storage",
    "*://*.yggtorrent.org/*",
    "*://yggtorrent.org/*"
  ],
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "content_scripts": [
    {
      "matches": [
        "*://*.yggtorrent.org/*",
        "*://yggtorrent.org/*"
      ],
      "js": ["browser-polyfill.min.js", "content.js"],
      "css": ["content.css"]
    }
  ],
  
  "browser_specific_settings": {
    "gecko": {
      "id": "yggtorrent-helper@moowglax.dev",
      "strict_min_version": "57.0"
    }
  }
}
